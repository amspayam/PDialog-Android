<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#dc1a44" android:startColor="#da2461" android:type="linear" />
            <corners android:radius="48dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#FF1F4F" android:startColor="#FF2A71" android:type="linear" />
            <corners android:radius="48dp" />
        </shape>
    </item>
</selector>